#include <stdio.h>

int main(){

    char letra = 'f';
    char *p; // ao criar ponteiro;

    p = &letra; // ponteiro só recebe o enderço da variável

    printf("Valor da letra: %c\n", letra);

    printf("Endereco de letra: %p\n", &letra); // para obter oi endereço de uma variavel, colocar o &


    printf("Valor de p: %p\n", p);

    printf("Endereco de p: %p\n", &p);

    printf("Valor apontado por p: %c\n",*p); // para obeter o conteúdo apontado pelo ponteiro

    return 0;

}
