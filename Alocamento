int main(void){
    int i, tam, *vet;

    printf("Informe o tamanho do vertor: ");
    scanf("%d", &tam);
    srand(time(NULL));
    vet = malloc(tam * sizeof(int));
    if(vet){
        printf("Memoria alocada com sucesso.\n");
        for(i = 0; i < tam; i++){
            *(vet + i) = rand() % 100;
        }
        for(i = 0;i < tam; i++){
            printf("%d", *(vet + i));
        }
        printf("\n");
    }else{
        printf("Erro ao alocar memoria.\n");
    }
}
